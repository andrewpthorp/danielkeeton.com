- unless @featured_listing.nil?
  .row.margin-bottom-30
    .large-12.columns.centered
      %section.no-padding.rounded
        %header
          %h3 Featured Listing
        %article
          = image_tag @featured_listing.image.featured, alt: "Featured House"
          %aside
            %h5
              .color-black.inline= @featured_listing.title
              .color-gray.inline= @featured_listing.status
            %h5.color-dark-green.inline= number_to_currency(@featured_listing.price)
            %p= @featured_listing.description
        %footer
          %p.margin-bottom-0.padding-right-10.text-right= link_to "View More Listings", "#", class: "strong color-white"

.row.margin-bottom-30
  .large-4.columns
    %section.no-padding
      %header
        %h3 Testimonials
      .padding-left-15.padding-right-15
