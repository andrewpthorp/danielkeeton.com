.row#contact-modal.reveal-modal
  .large-12.columns
    %section
      %header
        %h4 Contact Me

      .clearfix.width-100.margin-bottom-30.margin-top-10
        %p.margin-bottom-5.strong.left.width-50 2044 John Rolfe Parkway<br />Richmond, VA 23238
        %p.margin-bottom-5.strong.right.text-right.width-49 804-921-7406

      %p.margin-top-10.margin-bottom-5 You can also fill out this form and I will get back to you as soon as possible!
      %hr.margin-top-0.margin-bottom-20
      %form.custom{action: "/contact", method: "POST"}
        .row
          .large-4.columns
            = label_tag :name, "Name"
            = text_field_tag :name
          .large-4.columns
            = label_tag :email, "Email"
            = text_field_tag :email
          .large-4.columns
            = label_tag :phone, "Phone"
            = text_field_tag :phone

        .row
          .large-12.columns
            = label_tag :comments, "Comments"
            = text_area_tag :comments

        %hr.margin-top-10.margin-bottom-10

        .row
          .large-12.columns.clearfix
            = submit_tag "Send!", class: "custom-button blue right"
