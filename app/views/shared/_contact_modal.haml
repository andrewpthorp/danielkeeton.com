.row#contact-modal.reveal-modal
  .large-12.columns
    %section
      %header
        %h4 Contact Me

      .row
        .large-6.columns
          %p.strong.margin-bottom-0 2044 John Rolfe Parkway<br />Richmond, VA 23238
        .large-6.columns
          %p.strong.margin-bottom-0.text-right 804-921-7406

      %hr.full-bleed

      %form.custom{action: '/contact', method: 'POST'}
        .row
          .large-4.columns
            = label_tag :name, 'Name'
            = text_field_tag :name
          .large-4.columns
            = label_tag :email, 'Email'
            = text_field_tag :email
          .large-4.columns
            = label_tag :phone, 'Phone'
            = text_field_tag :phone

        .row
          .large-12.columns
            = label_tag :comments, 'Comments'
            = text_area_tag :comments, '', class: 'margin-bottom-0'

        %footer
          .row
            .large-12.columns.clearfix
              = submit_tag 'Send!', class: 'button success right margin-bottom-0'
