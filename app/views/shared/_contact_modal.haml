%section#contact-modal.reveal-modal.no-padding.medium.no-border.big-shadow
  %header
    %h4 Contact Me

  .padding-top-15.padding-right-15.padding-left-15
    .row
      .large-12.columns
        %p.mute Fill out this form and I will get back to you!

    %form.custom{action: "/contact", method: "POST"}
      .row
        .large-4.columns
          = label_tag :name, "Name"
          = text_field_tag :name
        .large-4.columns
          = label_tag :email, "Email"
          = text_field_tag :email
        .large-4.columns
          = label_tag :phone, "Phone"
          = text_field_tag :phone

      .row
        .large-12.columns
          = label_tag :comments, "Comments"
          = text_area_tag :comments

      %hr

      .row
        .large-12.columns
          = submit_tag "Send!", class: "custom-button blue"
