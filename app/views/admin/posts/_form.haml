= form_for [:admin, post], html: { class: 'custom post-form' } do |f|
  .row
    .large-12.columns
      = f.label :title
      = f.text_field :title

  .row
    .large-12.columns
      = f.label :body
      = f.text_area :body

  .row
    .large-12.columns
      = f.label :published do
        #{f.check_box :published} Publish Post

  %footer
    .row
      .large-6.columns
        = link_to 'Cancel', admin_posts_path, class: 'button secondary'
      .large-6.columns.text-right
        = f.submit 'Save', class: 'button success'
