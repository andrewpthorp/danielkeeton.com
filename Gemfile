# A sample Gemfile
source "https://rubygems.org"

gem 'rails'
gem 'carrierwave'
gem 'devise'
gem 'mail_view', '~> 1.0.3'
gem 'pg', require: 'pg'
gem 'foreman'
gem 'unicorn'

group :assets do
  gem 'sass-rails', '~> 3.2.5'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
  gem 'zurb-foundation'
  gem 'haml'
  gem 'sass'
  gem 'compass'
  gem 'compass-rails'
end

group :development do
  gem 'guard'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
end

group :development, :test do
  gem 'factory_girl_rails'
  gem 'faker'
  gem 'rspec-rails'
end

group :test do
  gem 'database_cleaner', '>= 0.6.7'
end
